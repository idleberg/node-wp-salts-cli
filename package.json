{
  "name": "wp-salts-cli",
  "version": "1.3.4",
  "description": "Generate WordPress salts right in your shell, even when offline. Supports plain-text output as well as DotEnv, PHP, JSON, or YAML.",
  "scripts": {
    "build": "rollup --config",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint:json": "eslint ./*.json --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "start": "rollup --watch --config",
    "publish": "np --no-yarn",
    "test": "ava ./test/*.js --verbose",
    "prepare": "husky install"
  },
  "bin": {
    "wp-salts": "./index.js"
  },
  "typings": "./types",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-wp-salts-cli.git"
  },
  "keywords": [
    "wordpress",
    "salts",
    "wordpress-salts"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.0.0",
    "commander": "^8.3.0",
    "log-symbols": "^5.1.0",
    "sort-keys": "^5.0.0",
    "table": "^6.0.7",
    "update-notifier": "^5.0.1",
    "wp-salts": "^2.0.0",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "ava": "^4.0.1",
    "eslint": "^8.7.0",
    "eslint-plugin-json": "^3.1.0",
    "execa": "^6.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.2",
    "np": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "remark-cli": "^10.0.1",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-preset-prettier": "^1.0.0",
    "rollup": "^2.38.0",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "lint-staged": {
    "*.(json|ts)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
