{
  "name": "wp-salts-cli",
  "version": "3.0.3",
  "description": "Generate WordPress salts right in your shell, even when offline. Supports plain-text output as well as DotEnv, PHP, JSON, or YAML.",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "dev": "npm run build -- --watch",
    "fix": "eslint --fix ./src",
    "lint:json": "eslint ./*.json --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "start": "npm run dev",
    "prepack": "npm run build",
    "publish": "np --no-yarn",
    "test": "uvu tests"
  },
  "files": [
    "bin/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "bin": {
    "wp-salts": "./index.mjs"
  },
  "type": "module",
  "types": "./types/index.d.ts",
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-wp-salts-cli.git"
  },
  "keywords": [
    "wordpress",
    "salt",
    "salts",
    "shuffle-salts",
    "cryptography",
    "wp-cli"
  ],
  "dependencies": {
    "commander": "^11.1.0",
    "log-symbols": "^6.0.0",
    "picocolors": "^1.0.0",
    "sort-keys": "^5.0.0",
    "table": "^6.8.1",
    "update-notifier": "^7.0.0",
    "wp-salts": "^4.0.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^18.11.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-plugin-json": "^3.1.0",
    "execa": "^8.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "np": "^9.2.0",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.1.1",
    "remark-cli": "^12.0.0",
    "remark-preset-lint-recommended": "^6.1.3",
    "remark-preset-prettier": "^2.0.1",
    "tslib": "^2.6.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "uvu": "^0.5.6"
  },
  "lint-staged": {
    "*.(json|ts)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
