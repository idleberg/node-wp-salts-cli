{
  "name": "wp-salts-cli",
  "version": "1.0.1",
  "description": "CLI tool to generate WordPress salts in various formats",
  "scripts": {
    "build": "tsc --pretty --project ./",
    "dev": "tsc --watch --pretty --project ./",
    "lint": "tslint --project .",
    "prepublishOnly": "npm run build",
    "test": "ava --verbose"
  },
  "bin": {
    "wp-salts": "./bin/wp-salts.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-wp-salts-cli.git"
  },
  "keywords": [
    "wordpress",
    "salts",
    "wordpress-salts"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^3.0.0",
    "commander": "^4.0.1",
    "sort-keys": "^4.0.0",
    "table": "^5.4.6",
    "wp-salts": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^12.12.17",
    "ava": "^2.4.0",
    "concurrently": "^5.0.1",
    "execa": "^3.0.4",
    "husky": "^3.1.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "concurrently \"npm run lint\" \"npm run test\""
    }
  }
}
