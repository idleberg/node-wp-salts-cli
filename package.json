{
	"name": "wp-salts-cli",
	"version": "5.0.0",
	"description": "Generate WordPress salts right in your shell, even when offline. Supports plain-text output as well as DotEnv, PHP, JSON, or YAML.",
	"license": "MIT",
	"scripts": {
		"build": "tsdown",
		"dev": "npm run build -- --watch",
		"lint": "concurrently --prefix-colors blue,green,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:knip": "knip --cache --production",
		"lint:publint": "publint",
		"prepack": "npm run build",
		"publish:jsr": "deno publish",
		"publish:npm": "np --any-branch",
		"start": "npm run start",
		"test": "concurrently --prefix-colors blue,green npm:test:*",
		"test:e2e": "uvu e2e",
		"test:unit": "vitest run"
	},
	"files": [
		"bin/",
		"LICENSE",
		"README.md"
	],
	"type": "module",
	"bin": {
		"wp-salts": "./bin/cli.js"
	},
	"types": "./bin/cli.d.ts",
	"engines": {
		"node": ">=20"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/node-wp-salts-cli.git"
	},
	"keywords": [
		"wordpress",
		"salt",
		"salts",
		"shuffle-salts",
		"cryptography",
		"wp-cli"
	],
	"dependencies": {
		"commander": "^14.0.2",
		"log-symbols": "^7.0.1",
		"picocolors": "^1.1.1",
		"sort-keys": "^6.0.0",
		"table": "^6.9.0",
		"wp-salts": "^6.0.0",
		"yaml": "^2.8.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@idleberg/configs": "^0.3.1",
		"@types/node": "^24.10.0",
		"@vitest/coverage-v8": "4.0.6",
		"concurrently": "^9.2.1",
		"execa": "^9.6.0",
		"knip": "^5.67.1",
		"np": "^10.2.0",
		"publint": "^0.3.15",
		"tsdown": "^0.15.12",
		"typescript": "^5.9.3",
		"uvu": "^0.5.6",
		"vitest": "^4.0.6"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"lefthook"
		]
	},
	"packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd"
}
