{
  "name": "wp-salts-cli",
  "version": "4.0.0",
  "description": "Generate WordPress salts right in your shell, even when offline. Supports plain-text output as well as DotEnv, PHP, JSON, or YAML.",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "dev": "npm run build -- --watch",
    "fix": "eslint --fix ./src",
    "lint:code": "eslint **/*.json **/*.ts --ignore-path .gitignore",
    "lint:deps": "knip --production",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "start": "npm run dev",
    "prepack": "npm run build",
    "publish": "np --no-yarn",
    "test": "uvu -r tsm tests"
  },
  "files": [
    "bin/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "bin": {
    "wp-salts": "./index.mjs"
  },
  "type": "module",
  "types": "./types/cli.d.ts",
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-wp-salts-cli.git"
  },
  "keywords": [
    "wordpress",
    "salt",
    "salts",
    "shuffle-salts",
    "cryptography",
    "wp-cli"
  ],
  "dependencies": {
    "commander": "^12.1.0",
    "log-symbols": "^6.0.0",
    "picocolors": "^1.0.1",
    "sort-keys": "^5.0.0",
    "table": "^6.8.2",
    "update-notifier": "^7.0.0",
    "wp-salts": "^4.0.0",
    "yaml": "^2.4.2"
  },
  "devDependencies": {
    "@types/node": "^18.19.33",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-unicorn": "^53.0.0",
    "execa": "^8.0.1",
    "husky": "^9.0.11",
    "knip": "^5.17.3",
    "lint-staged": "^15.2.5",
    "np": "^10.0.5",
    "npm-run-all2": "^6.2.0",
    "prettier": "^3.2.5",
    "remark-cli": "^12.0.1",
    "remark-preset-lint-recommended": "^6.1.3",
    "remark-preset-prettier": "^2.0.1",
    "tslib": "^2.6.2",
    "tsm": "^2.3.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "uvu": "^0.5.6"
  },
  "lint-staged": {
    "*.json": "eslint --cache --fix",
    "*.ts": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ],
    "*.(json|ts)": "eslint --cache --fix",
    "*.md": "prettier --write"
  },
  "packageManager": "pnpm@9.1.4+sha512.9df9cf27c91715646c7d675d1c9c8e41f6fce88246f1318c1aa6a1ed1aeb3c4f032fcdf4ba63cc69c4fe6d634279176b5358727d8f2cc1e65b65f43ce2f8bfb0"
}
