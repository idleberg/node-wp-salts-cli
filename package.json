{
  "name": "wp-salts-cli",
  "version": "1.3.3",
  "description": "Generate WordPress salts right in your shell, even when offline. Supports plain-text output as well as DotEnv, PHP, JSON, or YAML.",
  "scripts": {
    "build": "rollup --config",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint:json": "jsonlint --quiet ./*.json",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "start": "rollup --watch --config",
    "test": "ava ./test/*.js --verbose"
  },
  "bin": {
    "wp-salts": "./index.js"
  },
  "typings": "./types",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-wp-salts-cli.git"
  },
  "keywords": [
    "wordpress",
    "salts",
    "wordpress-salts"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^6.2.1",
    "log-symbols": "^4.0.0",
    "sort-keys": "^4.2.0",
    "table": "^6.0.7",
    "update-notifier": "^5.0.1",
    "wp-salts": "^1.1.1",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "11.0.1",
    "@rollup/plugin-typescript": "^8.1.2",
    "@types/node": "^14.14.20",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "ava": "^3.15.0",
    "eslint": "^7.17.0",
    "eslint-plugin-json": "^2.1.2",
    "esm": "^3.2.25",
    "execa": "^5.0.0",
    "husky": "^4.3.7",
    "jsonlint": "^1.6.3",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "remark-cli": "^9.0.0",
    "remark-preset-lint-recommended": "^5.0.0",
    "remark-preset-prettier": "^0.4.0",
    "rollup": "^2.36.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.json": "jsonlint --quiet",
    "*.md": "prettier --write"
  }
}
