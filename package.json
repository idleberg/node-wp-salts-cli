{
  "name": "wp-salts-cli",
  "version": "1.1.0",
  "description": "CLI tool to generate WordPress salts in various formats",
  "scripts": {
    "build": "rollup --config",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint": "eslint ./src",
    "start": "rollup --watch --config",
    "test": "ava ./test/*.js --verbose"
  },
  "bin": {
    "wp-salts": "./bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-wp-salts-cli.git"
  },
  "keywords": [
    "wordpress",
    "salts",
    "wordpress-salts"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^6.0.0",
    "sort-keys": "^4.0.0",
    "table": "^5.4.6",
    "update-notifier": "^4.1.0",
    "wp-salts": "^1.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "ava": "^3.11.0",
    "eslint": "^7.5.0",
    "esm": "^3.2.25",
    "execa": "^4.0.3",
    "husky": "^4.2.5",
    "rollup": "^2.23.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "ava": {
    "require": [
      "esm"
    ]
  }
}
