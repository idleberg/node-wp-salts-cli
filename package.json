{
  "name": "wp-salts-cli",
  "version": "3.0.2",
  "description": "Generate WordPress salts right in your shell, even when offline. Supports plain-text output as well as DotEnv, PHP, JSON, or YAML.",
  "license": "MIT",
  "scripts": {
    "build": "rollup --config",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint:json": "eslint ./*.json --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "start": "rollup --watch --config",
    "prepack": "npm run build",
    "publish": "np --no-yarn",
    "test": "uvu tests"
  },
  "files": [
    "bin/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "bin": {
    "wp-salts": "./index.mjs"
  },
  "type": "module",
  "types": "./types/index.d.ts",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-wp-salts-cli.git"
  },
  "keywords": [
    "wordpress",
    "salts",
    "wordpress-salts"
  ],
  "dependencies": {
    "commander": "^8.3.0",
    "log-symbols": "^5.1.0",
    "picocolors": "^1.0.0",
    "sort-keys": "^5.0.0",
    "table": "^6.8.0",
    "update-notifier": "^5.1.0",
    "wp-salts": "^2.0.2",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-json": "^4.0.1",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/node": "^18.11.5",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-plugin-json": "^3.1.0",
    "execa": "^6.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "np": "^7.6.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "remark-cli": "^11.0.0",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-preset-prettier": "^2.0.1",
    "rollup": "^3.2.3",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4",
    "uvu": "^0.5.6"
  },
  "lint-staged": {
    "*.(json|ts)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
